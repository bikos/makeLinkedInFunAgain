{
    "manifest_version": 3,
    "name": "LinkedIn Suggested Hider",
    "version": "1.0",
    "description": "Hides suggested posts on LinkedIn.",
    "permissions": ["activeTab"],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["*://www.linkedin.com/*"],
            "js": ["content.js"]
        }
    ]
}